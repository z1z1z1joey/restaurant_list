<div class="container mt-5">
  <div class="row" id="data-panel">

    {{#each restaurants}}
    <div class="col-sm-3">
      <div class="card mb-2">
        <img src="{{this.image}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">餐廳分類：{{this.category}}</p>
          <p class="card-text">餐廳評分：{{this.rating}}</p>
          <a href="/restaurants/{{this.id}}" class="btn btn-primary">Go</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>